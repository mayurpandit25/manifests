pipeline {
    agent any 

    environment {
        DOCKERHUB_USER = "mayurpandit25"
        APP_NAME = "student-app"
        DB_NAME = "student-mysql"
        KUBE_NAMESPACE = "student"
        DOCKER_CRED_ID  = "dockerhub-credentials-id"
        KUBECONFIG_ID   = "kubeconfig"
    }

    stages {

        stage (checkout code) {
            steps {
                git branch: 'main',
                    url: 'https://github.com/mayurpandit25/practice.git'
            }
        }

        stage (docker build) {
            steps {
                sh '''
                docker build -t $DOCKERHUB_USER/$APP_NAME:latest studentapp/app
                docker build -t $DOCKERHUB_USER/$DB_NAME:latest studentapp/db
                '''
            }
        }

        stage (push images to dockerhub) {
            steps {
                withCredentials([string(
                    credentialsID: "${DOCKER_CRED_ID}",
                    variable: 'DOCKER_TOKEN'
                )]) {
                    sh '''
                    echo $DOCKER_TOKEN | docker login -u $DOCKERHUB_USER --password-stdin
                    docker push $DOCKERHUB_USER/$APP_NAME:latest 
                    docker push $DOCKERHUB_USER/$DB_NAME:latest
                    '''
                }
            }
        }

        stage (Deploy to kubernetes) {
            steps {
                withCredentialsID([file(
                    credentialsID: "${KUBECONFIG_ID}",
                    variable: 'KUBECONFIG'
                )]) {
                    sh '''
                    export KUBECONFIG=$KUBECONFIG
                    kubectl create namespace $KUBE_NAMESPACE | true 
                    kubectl apply -f k8s/.
                    '''
                }
            }
        }
    }
}

